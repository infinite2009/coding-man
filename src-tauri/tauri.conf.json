{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "ditto",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "close": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "setDecorations": true,
        "startDragging": true,
        "setFullscreen": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.ditto.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "fileDropEnabled": true,
        "maximized": true,
        "fullscreen": false,
        "resizable": true,
        "title": "Ditto",
        "width": 800,
        "height": 600
      }
    ]
  }
}
