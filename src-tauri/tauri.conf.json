{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1024",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "ditto",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": [
          "**",
          "$HOME/.Trash"
        ]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "os": {
        "all": true
      },
      "shell": {
        "all": true,
        "open": true,
        "sidecar": true,
        "execute": true,
        "scope": [
          {
            "name": "cp",
            "cmd": "cp",
            "args": [
              "-r",
              {
                "validator": "\\S+"
              },
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "mv",
            "cmd": "mv",
            "args": [
              {
                "validator": "\\S+"
              },
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "rm",
            "cmd": "rm",
            "args": [
              "-rf",
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "Rename folder on win32",
            "cmd": "powershell",
            "args": [
              "Rename-Item",
              "-Path",
              {
                "validator": "\\S+"
              },
              "-NewName",
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "open Finder",
            "cmd": "open",
            "args": [
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "isDirectory",
            "cmd": "test",
            "args": [
              "-d",
              {
                "validator": "\\S+"
              },
              " && echo \"true\" || echo \"false\""
            ]
          }
        ]
      },
      "window": {
        "close": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "setDecorations": true,
        "startDragging": true,
        "setFullscreen": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.ditto.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "fileDropEnabled": true,
        "maximized": true,
        "fullscreen": false,
        "resizable": true,
        "title": "Ditto",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
