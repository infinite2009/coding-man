{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1024",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "voltron",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "http://**"]
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$APPDATA/**",
          "$APPLOCALDATA/**"
        ]
      },
      "fs": {
        "all": true,
        "scope": [
          "**",
          "$HOME/.Trash"
        ]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "os": {
        "all": true
      },
      "shell": {
        "all": true,
        "open": true,
        "sidecar": true,
        "execute": true,
        "scope": [
          {
            "name": "cp",
            "cmd": "cp",
            "args": [
              "-r",
              {
                "validator": "\\S+"
              },
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "mv",
            "cmd": "mv",
            "args": [
              {
                "validator": "\\S+"
              },
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "rm",
            "cmd": "rm",
            "args": [
              "-rf",
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "Rename folder on win32",
            "cmd": "powershell",
            "args": [
              "Rename-Item",
              "-Path",
              {
                "validator": "\\S+"
              },
              "-NewName",
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "open Finder",
            "cmd": "open",
            "args": [
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "isDirectory",
            "cmd": "test",
            "args": [
              "-d",
              {
                "validator": "\\S+"
              }
            ]
          }
        ]
      },
      "window": {
        "close": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "setDecorations": true,
        "startDragging": true,
        "setFullscreen": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.voltron.dev",
      "icon": [
        "icons/logo_32.png",
        "icons/logo_128.png",
        "icons/logo_256.png",
        "icons/logo.icns",
        "icons/logo.ico"
      ],
      "macOS": {
        "signingIdentity": "luodongyang"
      },
      "windows": {
        "wix": {
          "language": "zh-CN"
        },
        "nsis": {
          "languages": ["SimpChinese", "English"],
          "displayLanguageSelector": true
        }
      }
    },
    "windows": [
      {
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "fileDropEnabled": true,
        "maximized": true,
        "fullscreen": false,
        "resizable": true,
        "title": "Voltron",
        "width": 1300,
        "height": 800,
        "minWidth": 1300,
        "minHeight": 800
      }
    ]
  }
}
